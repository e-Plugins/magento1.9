<?xml version="1.0"?>
<config>
    <modules>
        <Digiwallet_Ideal>
            <version>1.0.8</version>
        </Digiwallet_Ideal>
    </modules>

    <global>
        <blocks>
            <ideal>
                <class>Digiwallet_Ideal_Block</class>
            </ideal>
        </blocks>

        <models>
            <ideal>
                <class>Digiwallet_Ideal_Model</class>
            </ideal>
        </models>

        <resources>
            <ideal_setup>
                <setup>
                    <module>Digiwallet_Ideal</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ideal_setup>
            <ideal_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ideal_write>
            <ideal_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ideal_read>
        </resources>
    </global>

    <frontend>
        <routers>
            <ideal>
                <use>standard</use>
                <args>
                    <module>Digiwallet_Ideal</module>
                    <frontName>ideal</frontName>
                </args>
            </ideal>
        </routers>
    </frontend>

    <default>
        <payment>
            <ideal>
                <sort_order>2</sort_order>
                <active>1</active>
                <rtlo>93929</rtlo> <!-- // Default DigiWallet -->
                <token></token> <!-- you can obtain your api key in your organization dashboard on https://digiwallet.nl -->
                <model>ideal/ideal</model>
                <order_status>1</order_status>
                <complete_status>4</complete_status>
                <autocreate_invoice>1</autocreate_invoice>
                <title>iDEAL</title>
            </ideal>
        </payment>
    </default>
</config>
