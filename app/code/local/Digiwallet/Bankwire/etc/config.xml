<?xml version="1.0"?>
<config>
    <modules>
        <Digiwallet_Bankwire>
            <version>1.0.8</version>
        </Digiwallet_Bankwire>
    </modules>

    <global>
        <models>
            <bankwire>
                <class>Digiwallet_Bankwire_Model</class>
            </bankwire>
        </models>

        <resources>
            <bankwire_setup>
                <setup>
                    <module>Digiwallet_Bankwire</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup
                    </class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bankwire_setup>
            <bankwire_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bankwire_write>
            <bankwire_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bankwire_read>
        </resources>
    </global>

    <frontend>
        <routers>
            <bankwire>
                <use>standard</use>
                <args>
                    <module>Digiwallet_Bankwire</module>
                    <frontName>bankwire</frontName>
                </args>
            </bankwire>
        </routers>
        <layout>
            <updates>
                <bankwire>
                    <file>bankwire.xml</file>
                </bankwire>
            </updates>
        </layout>
    </frontend>

    <default>
        <payment>
            <bankwire>
                <sort_order>0</sort_order>
                <active>0</active>
                <rtlo>93929</rtlo> <!-- // Default DigiWallet -->
                <token></token> <!-- you can obtain your api key in your organization dashboard on https://digiwallet.nl -->
                <model>bankwire/bankwire</model>
                <order_status>1</order_status>
                <complete_status>4</complete_status>
                <autocreate_invoice>1</autocreate_invoice>
                <title>Bankwire</title>
            </bankwire>
        </payment>
    </default>
</config>
